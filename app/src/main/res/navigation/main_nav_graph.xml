    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hamza.photolibrary.ui.home.HomeFragment"
        android:label="@string/screen_home_title_str"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_pictureDetailsFragment"
            app:destination="@id/pictureDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/pictureDetailsFragment"
        android:name="com.hamza.photolibrary.ui.detail.PictureDetailFragment"
        android:label="@string/screen_picture_details_title_str"
        tools:layout="@layout/picture_detail_fragment" />
